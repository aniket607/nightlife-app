generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Places {
  id        Int   @id @default(autoincrement())
  venueName String   @unique
  location  String
  rating   Float
  venue Venue?
}
model Venue {
  venueId        Int   @id @default(autoincrement())
  address String
  locationUrl String?
  placeId Int @unique
  place Places @relation(fields: [placeId], references: [id])
  events Event[]
}
model Event {
  eventId        Int   @id @default(autoincrement())
  eventName String
  eventDescription String?
  eventDate DateTime
  glCount Int
  venueIdentity Int
  venue Venue @relation(fields: [venueIdentity], references: [venueId])
}